<section class="container mt-2">
	<h1>Checkout</h1>

	<div class="row">
		<div class="col-md-6">
			<table class="table">
				<thead>
					<tr>
						<th>Name</th>
						<th>Price</th>
						<th>Quantity</th>
						<th>Total</th>
					</tr>
				</thead>
				<tbody>
					<% products.forEach(prod => { %>
					<tr>
						<td><%= prod.name %></td>
						<td>$<%= prod.price %></td>
						<td><%= prod.quantity %></td>
						<td><b>$<%= prod.total.toFixed(2) %></b></td>
					</tr>
					<% }) %>
				</tbody>
				<tfoot>
					<tr>
						<td></td>
						<td></td>
						<td></td>
						<td><b>$<%= orderTotal.toFixed(2) %></b></td>
					</tr>
				</tfoot>
			</table>
		</div>

		<div class="col-md-6">
			<form action="/checkout" method="post">
				<input type="hidden" name="_csrf" value="<%= csrfToken %>" />

				<button type="submit" class="btn btn-primary">Confirm Order</button>
			</form>
		</div>
	</div>
</section>
